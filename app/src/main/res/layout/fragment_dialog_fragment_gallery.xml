<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DialogFragmentGallery">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="425dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:layout_width="431dp"
            android:id="@+id/capacidad"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:layout_height="29dp" />

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="@dimen/alto"
            android:textColor="#FFFFFF"
            android:src="@drawable/estacionamiento1"
            android:layout_weight="7"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/galeria"
            android:layout_width="match_parent"
            android:layout_height="@dimen/alto"
            android:layout_weight="2"
            android:scrollbars="horizontal">

        </android.support.v7.widget.RecyclerView>
        <Button
            android:id="@+id/mostrarQR"
            android:onClick="MostrarQR"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:text="Mostrar cÃ³digo QR"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:background="@color/colorPrimary"
            android:gravity="center" />

    </LinearLayout>

</FrameLayout>